# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.sh]
indent_style = space
indent_size = 4

# 2 space indentation
[*.yaml]
indent_style = space
indent_size = 2
